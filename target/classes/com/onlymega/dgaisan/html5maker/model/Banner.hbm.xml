<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
	<class name="com.onlymega.dgaisan.html5maker.model.Banner" table="banners">
            <id name="dataId" type="java.lang.Integer">
                <column name="id" />
                <generator class="increment" />
            </id>

            <property name="active" type="java.lang.Integer">
                 <column name="active" length="10" />
            </property>            

            <property name="name" type="string">
                <column name="name"></column>
            </property>

            <property name="zipFile" type="string">
                <column name="zip_file"></column>
            </property>

            <property name="folder" type="string">
                <column name="folder"></column>
            </property>

            <property name="bannerFile" type="string">
                <column name="banner_file"></column>
            </property>

            <many-to-one name="user" class="User" cascade="ALL">
                <column name="userId" not-null="true" />
            </many-to-one>

            <property name="dateCreated" type="java.util.Date">
                <column name="date_created" />
            </property>
	</class>
</hibernate-mapping>